# Shortcuts
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias v='vim'
alias rr='rm -rf'
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../../"
alias ......="cd ../../../../../"

# List alias and functions
alias lalias="alias | sed 's/=.*//'"
alias lfunction="declare -f | grep '^[a-z].* ()' | sed 's/{$//'"

alias quit="exit"

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

alias ll='ls -lF --color=auto'
alias la='ls -alF --color=auto'
alias ls='ls -F --color=auto'
